    <!-- MyBatis Configuration for PostgreSQL -->
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource" />
        <property name="mapperLocations" value="classpath:mappers/**/*.xml" />
        <property name="configurationProperties">
            <props>
                <prop key="mapUnderscoreToCamelCase">true</prop>
                <prop key="callSettersOnNulls">true</prop>
                <prop key="jdbcTypeForNull">NULL</prop>
                <!-- PostgreSQL 특화 설정 -->
                <prop key="defaultFetchSize">100</prop>
                <prop key="defaultStatementTimeout">30</prop>
            </props>
        </property>
    </bean>

    <!-- MyBatis Mapper Scanner -->
    <mybatis:scan base-package="com.psim.web.**.mapper" />

    <!-- Transaction Manager -->
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <!-- Enable Transaction Annotations -->
    <tx:annotation-driven transaction-manager="transactionManager" />

</beans>