<!-- language: xml -->
<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- MyBatis 내부 로거 -->
  <logger name="org.apache.ibatis" level="DEBUG"/>
  <logger name="org.apache.ibatis.logging.jdbc.BaseJdbcLogger" level="TRACE"/>
  <logger name="org.apache.ibatis.logging.jdbc.ConnectionLogger" level="DEBUG"/>
  <logger name="org.apache.ibatis.logging.jdbc.PreparedStatementLogger" level="TRACE"/>
  <logger name="org.apache.ibatis.logging.jdbc.ResultSetLogger" level="TRACE"/>

  <!-- 매퍼 네임스페이스 단위(원하는 네임스페이스로 조정) -->
  <!-- <logger name="com.psim.web.**.mapper" level="TRACE"/> -->

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
